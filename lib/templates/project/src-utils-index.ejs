async function joiValidate(schema, data) {
  try {
    return await schema.validateAsync(data)
  } catch (error) {
    throw error
  }
}

function slugify(str) {
  return str.split(/[\s._-]/).join("-").toLowerCase()
}


module.exports = {
  CustomError: require("./custom-error"),
  joiValidate,
  response: require("./response"),
  slugify,
}