const UserServ = require("./../services/user.service");
const { response } = require("./../utils");


class UserContoller {
  async findAll(req, res) {
    const result = await UserServ.findAll(req.body);
    res.status(200).send(response("All users", result));
  }

  async findOne(req, res) {
    const result = await UserServ.findOne(req.body);
    res.status(200).send(response("User data", result));
  }

  async updateOne(req, res) {
    const result = await UserServ.updateOne(req.body);
    res.status(200).send(response("User updated", result));
  }

  async deleteOne(req, res) {
    const result = await UserServ.deleteOne(req.body);
    res.status(200).send(response("User deleted", result));
  }
}


module.exports = new UserContoller();